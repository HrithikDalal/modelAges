<%- include("../partials/header.ejs") %>



<div class ="ui main tetx container segment">
    <div class="ui huge header">Edit<%=image.name%></div>
    <form  class ="ui form" action="/images/<%=image._id%>?_method=PUT" method="POST">
        <div class = "field">
            <label>Title</label>
             <input type="text" name="image[name]" value="<%=image.name%>">
        </div>
        <div class = "field">
            <label>Image Url</label>
             <input type="text" name="image[url]" value="<%=image.url%>">
        </div>
        <div class = "field">
            <label>Image description</label>
             <textarea name="image[description]" required ><%=image.description%></textarea>
        </div>
        <input class ="ui blue basic button" type="submit">
    </form>
</div>




