<%- include("../partials/header.ejs") %>



<div class ="ui text segment">
    <div class="ui huge header"> <%=image.name%></div>
        <div class ="ui top attached ">
            <div class="item">
                <img class ="ui centered rounded image" src="<%=image.url%>">
                <div class="discription">
                    <p>
                        <%-image.description%>
                    </p>
                    <%if(currentUser && currentUser.isAdmin){%>
                    <a class ="ui orange basic button" href="/images/<%=image._id%>/edit">Edit</a>
                    <form id="delete" action="/images/<%=image._id%>?_method=DELETE" method="POST">
                        <button class="ui red basic button">Delete</button>
                    </form>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
</div






