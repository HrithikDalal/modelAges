<%- include("../partials/header.ejs") %>

<div style= "width : 30%; margin: 20px auto;">
  <div class ="ui main tetx container segment">
    <div class="ui huge header">Add Testimonial
    </div>
      <form  class ="ui form" action="/testimonials" method="POST">
      <div class = "field">
          <label>Name</label>
          <input type="text" name="testimonial[author]" value ="<%=currentUser.username%>"disabled>
      </div>

      <div class = "field">
          <label>Testimonial</label>
          <textarea name="testimonial[body]" required></textarea>
      </div>
      <div class="form-group">
          <label for="rating">Leave a rating:</label>
          <fieldset class="starability-basic form-group" id="rating">
          <div>
          <input type="radio" id="first-rate5" name="testimonial[rating]" value="5" checked />
          <label for="first-rate5" title="5 stars - Amazing">
              <%- '<span class="fa fa-star checked"></span>'.repeat(5) %>
          </label>
          </div>
          <div>
          <input type="radio" id="first-rate4" name="testimonial[rating]" value="4" />
          <label for="first-rate4" title="4 stars - Very good">
              <%- '<span class="fa fa-star checked"></span>'.repeat(4) %>
          </label>
          </div>
          <div>
          <input type="radio" id="first-rate3" name="testimonial[rating]" value="3" />
          <label for="first-rate3" title="3 stars - Average">
              <%- '<span class="fa fa-star checked"></span>'.repeat(3) %>
          </label>
          </div>
          <div>
          <input type="radio" id="first-rate2" name="testimonial[rating]" value="2" />
          <label for="first-rate2" title="2 stars - Not good">
              <%- '<span class="fa fa-star checked"></span>'.repeat(2) %>
          </label>
          </div>
          <div>
          <input type="radio" id="first-rate1" name="testimonial[rating]" value="1" />
          <label for="first-rate1" title="1 star - Terrible">
              <%- '<span class="fa fa-star checked"></span>'.repeat(1) %>
          </label>
      </div>
        
      <input class ="ui blue basic button" type="submit">
    </form>
    <a href="/">Go Back</a>
</div>
</div>



<%- include("../partials/footer.ejs") %>