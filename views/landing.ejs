<%- include("partials/header.ejs") %>

<%if(currentUser && currentUser.isAdmin){%>
<h2 class="ui block header">You are an Admin</h2>
<%}%>


<!--Carasoul-->
<div class="parallax-1">
  <div id="carouselExampleCaptions" class="carousel slide  container" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://preview.lsvr.sk/beautyspot/wp-content/uploads/sites/6/2019/05/slide_01.jpg" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Welcome to Modelages</h5>
          <p>Where we love to exceed your expectations.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://preview.lsvr.sk/beautyspot/wp-content/uploads/sites/6/2019/05/slide_02.jpg" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Read Professional Beauty Tips</h5>
          <p>Get inspired by our beauty tips on cosmetics, hair and body treatments</p>
          <a class = " btn btn-outline-dark" href="/blogs">Blog</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://preview.lsvr.sk/beautyspot/wp-content/uploads/sites/6/2019/05/slide_03.jpg" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>Hundereds of Happy Clients.</h5>
          <p>Read what some of our customers are saying about our beauty salon.</p>
          <a class = " btn btn-outline-dark" href="/testimonials">Testimonials</a>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div> 



<!--Services -->
<div class="parallax-2">
  <div class = "row text-center col-lg-12">
    <div class= "col-lg-12">
      <h2 class="header-1">Our Services</h2>
    </div>
    <%services.forEach(function(service){%>
    <div class="card mb-3 col-lg-6 col-md-6 col-sm-8 service">
      <div class="row no-gutters">
        <div class="col-md-6">
          <img src="<%=service.image%>" class="card-img" alt="<%=service.name%>">
        </div>
        <div class="col-md-6">
          <div class="card-body" style="padding-top : 50px">
            <h5 class="card-title"><%=service.name%></h5>
            <a class="btn btn-primary" href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/modelagessalon/<%=service.appointment%>'});return false;">Book Appointment</a>
          </div>
        </div>
      </div>
    </div>
    <%});%>
        
  </div>
   <div style= "width : 10%; margin: 0px auto; padding : 10px">
  <a class = " btn btn-dark btn-lg" href="/services">More<i class="right chevron icon"></i></a>
</div>
</div>


<!--Get Quote-->


<div class="parallax-3">
  <h2 class="header-1 text-center">Get Quote</h2>
  <div class="container" >
    <div style= "width : 65%; margin: 0px auto; padding : 10px;">
      <div class="ui inverted segment text-center">
      <div class="ui inverted form" >
        <h3 class="text-center">Special Packages for Marraige</h3>
        <form  class ="ui form" action="/quotes" method="POST">
          <div class="field" style="margin : 50px">
            <label>Name</label>
            <input type="text" name="quote[name]" placeholder="Name">
          </div>
          <div class="field " style="margin : 50px">
            <label>Phone Number</label>
            <input type="text" name="quote[phone]" placeholder="Phone Number" >
          </div>
          <div class="field " style="margin : 50px">
            <label>Email</label>
            <input type="text" name="quote[email]" placeholder="Email" >
          </div>
          <div class="field" style="margin : 50px">
            <label>Hoe can we help you?</label>
            <textarea name="quote[message]" placeholder="I was wondering about availability and rates. I need help with the following : "></textarea>
          </div>
        <input class ="ui blue basic button" type="submit">
        </form>
      </div>
    </div>
    </div>
  </div>
</div>




<!--Testimonials-->

<div class="parallax-4">
  <div class="container" >
    <div class = "row text-center col-lg-12" >
      <h2 class="header-1 col-lg-12">
          Testimonials
      </h2>
    <%testimonials.forEach(function(testimonial){%>
    <div class="col-lg-3 col-md-6  col-sm-6 col-12">
        <div class="ui raised card" style="margin : 10px;">
            <div class="content">
                <div class="header"><%=testimonial.author%>
                </div>
                <div class="meta">
                  <span class="category"><%=testimonial.created.toDateString()%></span>
                </div>
                <div class="description">
                  <p><%=testimonial.body%></p>
                </div>
            </div>
            <div class="extra content">
                <div class="right floated author">
                    <span class="fas fa-star"></span>
                    <% if (testimonial.rating > 1.5) { %> <span class="fas fa-star"></span> <% }else{ %> <span class="far fa-star"></span> <% } %>
                    <% if (testimonial.rating > 2.5) { %> <span class="fas fa-star"></span> <% }else{ %> <span class="far fa-star"></span> <% } %>
                    <% if (testimonial.rating > 3.5) { %> <span class="fas fa-star"></span> <% }else{ %> <span class="far fa-star"></span> <% } %>
                    <% if (testimonial.rating > 4.5) { %> <span class="fas fa-star"></span> <% }else{ %> <span class="far fa-star"></span> <% } %>
                </div>
            </div>
        </div>
    </div>    
    <% }) %>
    
    </div >
    <div style= "width : 25%; margin: 0px auto; padding : 10px">
      <a class = " btn btn-dark btn-lg" href="/testimonials">More<i class="right chevron icon"></i></a> 
      <a class="btn btn-dark btn-lg" href="/testimonials/new">Add testimonial</a>
    </div>
    
  </div> 
</div>

  
  

