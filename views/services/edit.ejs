<%- include("../partials/header.ejs") %>



<div class ="ui main tetx container segment">
    <div class="ui huge header">Edit<%=service.name%></div>
    <form  class ="ui form" action="/services/<%=service._id%>?_method=PUT" method="POST">
        <div class = "field">
            <label>Title</label>
             <input type="text" name="service[name]" value="<%=service.name%>">
        </div>
        <div class = "field">
            <label>Image Url</label>
             <input type="text" name="service[image]" value="<%=service.image%>">
        </div>
        <div class = "field">
            <label>Service Cost</label>
             <textarea name="service[cost]" required ><%=service.cost%></textarea>
        </div>
        <div class = "field">
            <label>Service description</label>
             <textarea name="service[description]" required ><%=service.description%></textarea>
        </div>        
        <div class = "field">
            <label>Appointment Link</label>
             <textarea name="service[appointment]" required ><%=service.appointment%></textarea>
        </div>
        <input class ="ui blue basic button" type="submit">
    </form>
</div>




<%- include("../partials/footer.ejs") %>